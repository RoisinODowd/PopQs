<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roisodowd.practice2.q2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What are you doing grammatically?"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I use 了 my phone."
        android:id="@+id/radioButton8"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:checked="false"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I 在 use my phone."
        android:id="@+id/radioButton9"
        android:layout_marginTop="36dp"
        android:checked="false"
        android:layout_below="@+id/radioButton8"
        android:layout_alignStart="@+id/radioButton8"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I 要 use my phone."
        android:id="@+id/radioButton10"
        android:layout_marginTop="36dp"
        android:checked="false"
        android:layout_below="@+id/radioButton9"
        android:layout_alignEnd="@+id/radioButton9"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="previous Q"
        android:id="@+id/button12"
        android:layout_below="@+id/radioButton10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT Q"
        android:id="@+id/button13"
        android:layout_alignBottom="@+id/button12"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Try again!"
        android:id="@+id/textView17"
        android:layout_below="@+id/radioButton8"
        android:layout_alignEnd="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You got it!"
        android:id="@+id/textView18"
        android:layout_below="@+id/radioButton9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Try again!"
        android:id="@+id/textView19"
        android:layout_below="@+id/radioButton10"
        android:layout_alignEnd="@+id/textView18"
        android:visibility="invisible"/>
</RelativeLayout>
