<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roisodowd.practice2.q3Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Which word best describes this picture?"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:background="@drawable/cat"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鸡"
        android:id="@+id/radioButton11"
        android:checked="false"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="狗"
        android:id="@+id/radioButton12"
        android:layout_below="@+id/radioButton11"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:layout_marginTop="36dp"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="猫"
        android:id="@+id/radioButton13"
        android:layout_below="@+id/radioButton12"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:layout_marginTop="36dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREVIOUS Q"
        android:id="@+id/button14"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/radioButton13"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT Q"
        android:id="@+id/button15"
        android:layout_alignTop="@+id/button14"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Try again!"
        android:id="@+id/textView22"
        android:layout_below="@+id/radioButton11"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Try again!"
        android:id="@+id/textView23"
        android:layout_below="@+id/radioButton12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You got it!"
        android:id="@+id/textView29"
        android:layout_below="@+id/radioButton13"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
