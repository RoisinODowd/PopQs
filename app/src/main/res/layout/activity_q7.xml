<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roisodowd.practice2.q7Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What color is this egg?"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#000000" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黄色"
        android:id="@+id/radioButton23"
        android:layout_marginTop="86dp"
        android:checked="false"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红色"
        android:id="@+id/radioButton24"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/radioButton23"
        android:layout_alignStart="@+id/radioButton23"
        android:checked="false"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白色"
        android:id="@+id/radioButton25"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/radioButton24"
        android:layout_alignStart="@+id/radioButton24"
        android:checked="false"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:background="@drawable/egg"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="previous q"
        android:id="@+id/button22"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/radioButton25"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next q"
        android:id="@+id/button23"
        android:layout_alignTop="@+id/button22"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Try again!"
        android:id="@+id/textView26"
        android:layout_below="@+id/radioButton23"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Try again!"
        android:id="@+id/textView27"
        android:layout_below="@+id/radioButton24"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You got it!"
        android:id="@+id/textView34"
        android:layout_below="@+id/radioButton25"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
</RelativeLayout>
